<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="globalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff1744</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="boxStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="boxStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F6F9FE</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="questionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="boxStyle4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F6F9FE</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="imageToTheLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="radioToTheRight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="question3Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="submitButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#ff1744</item>
        <item name="android:background">#fffde7</item>

    </style>

</resources>
